<article id="<%= dom_id order %>">
  <p>
    <strong>Order #</strong>
    <%= order.id %>, (<%= order.created_at.strftime("%d %h %Y, %H:%M") %>)
  </p>

  <p>
    <mark>
      <%= order.status %>
    </mark>
  </p>

  <p>
    <strong>Delivery:</strong>
    <%= simple_format order.delivery_details %>
  </p>

  <p>
    <strong>Items ordered:</strong>
    <%= order.order_items.map(&:quantity).sum %>
    <%#= order.order_items.count %>
  </p>

  <% if order.draft? %>
    <%= button_to order_path(order.id), params: {order: { id: order.id, status: Order.statuses[:submitted] }}, method: :put do %>
      <i class="fa-solid fa-credit-card"></i>
      Complete order:
      <%= order.total_price/100.to_d %> PLN
    <% end %>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to order do %>
      Show this order
    <% end %>
  <% end %>
</article>
